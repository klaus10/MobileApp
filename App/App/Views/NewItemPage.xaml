<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="App.Views.NewItemPage"
		     Title="New Property">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save" Clicked="Save_Clicked" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <Label Text="Address" FontSize="Medium" />
            <Entry Placeholder="Street, City"></Entry>
            <!--<Entry Text="{Binding Item.Text}" FontSize="Small" />-->
            <Label Text="Details" FontSize="Medium" />
            <Entry Placeholder="# of Beds, # of Baths, Status, Price, Owner"></Entry>
            <!--<Editor Text="{Binding Item.Description}" FontSize="Small" Margin="0" />-->
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
